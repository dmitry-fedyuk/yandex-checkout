<?xml version='1.0'?>
<config>
	<modules>
		<LesMills_YandexCheckout>
			<author>Dmitry Fedyuk</author>
			<version>0.0.2</version>
		</LesMills_YandexCheckout>
	</modules>
	<default>
		<payment>
			<yandex_checkout>
				<active>0</active>
				<model>LesMills_YandexCheckout_Method</model>
			</yandex_checkout>
		</payment>
	</default>
	<frontend>
        <layout>
            <updates>
                <yandex_checkout>
                    <file>yandex_checkout.xml</file>
                </yandex_checkout>
            </updates>
        </layout>			
		<routers>
			<yandex_checkout>
				<args>
					<frontName>yandex-checkout</frontName>
					<module>LesMills_YandexCheckout</module>
				</args>
				<use>standard</use>
			</yandex_checkout>
		</routers>
	</frontend>
</config>